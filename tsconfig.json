{
  "compilerOptions": {
    "target": "ES2020",  
    "module": "ESNext",
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",
    "outDir": "./dist", 
    "resolveJsonModule": true  
  },
  "include": [
    "src/**/*.ts"  
  ],
  "exclude": [
    "node_modules" 
  ]
}
